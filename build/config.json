{
  "os_name": "Aurora OS",
  "version": "0.1.0",
  "arch": "x86_64",
  "base_distro": "ubuntu",
  "base_version": "22.04",
  "kernel_version": "6.x",
  "packages": [
    "python3",
    "python3-pip",
    "build-essential",
    "git",
    "curl",
    "wget",
    "grub-pc",
    "systemd",
    "xorg",
    "gnome-session"
  ],
  "aurora_components": {
    "kernel_extensions": true,
    "ai_control_plane": true,
    "desktop_shell": true,
    "system_services": true,
    "mcp_nervous_system": true
  },
  "build_settings": {
    "parallel_jobs": 4,
    "debug_symbols": true,
    "optimization_level": "O2",
    "strip_binaries": false
  },
  "security": {
    "selinux": true,
    "apparmor": true,
    "firewall": true,
    "secure_boot": false
  },
  "network": {
    "auto_configure": true,
    "wifi_support": true,
    "bluetooth_support": true,
    "vpn_support": true
  },
  "desktop": {
    "default_environment": "aurora",
    "auto_login": false,
    "display_manager": "gdm",
    "window_manager": "aurora-compositor"
  },
  "ai_settings": {
    "model_path": "/opt/aurora/models",
    "cache_size": "2GB",
    "max_memory": "4GB",
    "enable_gpu": true,
    "privacy_mode": true
  },
  "system_services": {
    "auto_start": [
      "aurora-ai-control-plane",
      "aurora-service-manager",
      "aurora-mcp"
    ],
    "user_services": [
      "aurora-desktop-shell"
    ]
  }
}